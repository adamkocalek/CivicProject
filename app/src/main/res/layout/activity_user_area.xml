<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_main">


    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_user_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_drawer"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Panel Użytkownika" />

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textSize="0sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Imię"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorAccent"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/editTextSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nazwisko"
        android:onClick="onClickTextSurname"
        android:textColorHint="@color/colorAccent"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hasło"
        android:inputType="textPassword"
        android:textColorHint="@color/colorAccent"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Wiek"
        android:inputType="number"
        android:textColorHint="@color/colorAccent"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>

    <EditText
        android:id="@+id/editTextTelephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Telefon"
        android:inputType="phone"
        android:textColorHint="@color/colorAccent"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/colorAccent"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_primary"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Edytuj Dane"
        android:textColor="#878787" />



    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Login"
        android:textSize="0sp"
        android:textColorHint="@color/colorAccent"
        android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tvDeleteUser"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Usuń konto"
            android:textColor="#878787"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    </LinearLayout>

</RelativeLayout>